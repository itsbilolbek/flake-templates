root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.py]
# Python specific (PEP 8 standard)
indent_style = space
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
# YAML files usually prefer 2 spaces
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
# Makefiles MUST use tabs
indent_style = tab
